{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  }
}
